<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_battery_status"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="电池1"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:layout_toLeftOf="@+id/tv_battery_status"
                        android:text="SN码：SNHYUTJKLG"
                        android:textColor="@color/gray_light"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_battery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="正常"
                        android:textColor="@color/green"
                        android:textSize="13sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/timepicker_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:background="@drawable/bg_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ProgressBar
                                android:id="@+id/battery_pb"
                                android:padding="@dimen/x1"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="15dp"
                                android:layout_height="60dp"
                                android:max="100"
                                android:min="0"
                                android:progress="80"
                                android:progressDrawable="@drawable/progressbar_vet" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_v_o"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="4.21V"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="电量"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_low_battery_quantity_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:background="@drawable/bg_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ProgressBar
                                android:padding="@dimen/x1"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="15dp"
                                android:layout_height="60dp"
                                android:max="100"
                                android:min="0"
                                android:progress="80"
                                android:progressDrawable="@drawable/progressbar_vet" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_v_t"

                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="4.21V"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="温度"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_battery_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:background="@drawable/bg_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ProgressBar
                                android:padding="@dimen/x1"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="15dp"
                                android:layout_height="60dp"
                                android:max="100"
                                android:min="0"
                                android:progress="80"
                                android:progressDrawable="@drawable/progressbar_vet" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_v_th"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="4.21V"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="电压"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_battery_voltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:background="@drawable/bg_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ProgressBar
                                android:padding="@dimen/x1"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="15dp"
                                android:layout_height="60dp"
                                android:max="100"
                                android:min="0"
                                android:progress="80"
                                android:progressDrawable="@drawable/progressbar_vet" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_v_f"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="4.21V"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="循环次数"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_battery_cycles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>






        </LinearLayout>
</LinearLayout>