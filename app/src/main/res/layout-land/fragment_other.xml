<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="直播状态"
            android:textColor="@color/white"
            android:textSize="13sp" />



    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="FPS："
            android:textColor="@color/gray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_fps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="-10000dbm"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="码率："
            android:textColor="@color/gray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_channel_band_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="10MHz"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="推流地址："
            android:textColor="@color/gray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_live_show_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="0.9Mbps"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/timepicker_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="直播推流"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <Button
                android:text="开启"
                android:textColor="@color/white"
                android:id="@+id/btn_start_live"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:background="@drawable/bg_spinner"
                android:orientation="horizontal"
                android:padding="1dp"/>
            <Button
                android:text="结束"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:id="@+id/btn_stop_live"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:background="@drawable/bg_spinner"
                android:orientation="horizontal"
                android:padding="1dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>